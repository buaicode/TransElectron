{
  "name": "TransElectron",
  "version": "1.0.2",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=production electron .",
    "dev": "NODE_ENV=development electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx electron-builder",
    "build:mac": "npx electron-builder --mac",
    "build:win": "npx electron-builder --win"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "TransElectron-将网站包装成基于 Electron 的桌面客户端",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "js-yaml": "^4.1.0"
  },
  "build": {
    "productName": "TransElectron",
    "appId": "com.transelectron.electron.app",
    "publish": [
      {
        "provider": "github",
        "owner": "buaicode",
        "repo": "TransElectron"
      }
    ],
    "mac": {
      "extraResources": [
        {
          "from": "build/icons/icon.icns",
          "to": "build/icons/icon.icns"
        },
        {
          "from": "build/icons/icon_legacy.icns",
          "to": "build/icons/icon_legacy.icns"
        }
      ],
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "extraResources": [
        {
          "from": "build/icons/icon.ico",
          "to": "build/icons/icon.ico"
        }
      ],
      "icon": "build/icons/icon.ico"
    }
  }
}
